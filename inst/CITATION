citHeader("To cite package 'latdiag' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "latdiag: diagrams for latent trait models",
         author = personList(as.person("Michael Dewey")),
         year = year,
         note = vers,

         textVersion =
         paste("Michael Dewey (",
               year,
               "). latdiag: diagrams for latent trait models. ",
               vers, ".", sep=""))

